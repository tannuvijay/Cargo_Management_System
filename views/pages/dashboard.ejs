<% include('../layouts/main.ejs') %>
<style>
    /* General Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Background styling */
    body {
      color:#dacbcb;
      height: 100vh;
      margin: 0;
      overflow: hidden;
      background: radial-gradient(circle, #011307, #001736); /* Dark blue gradient */
      font-family: 'Arial', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Starry Background */
    .stars {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: transparent;
      z-index: 1;
    }

    /* Shining stars effect */
    .star {
      width: 3px;
      height: 3px;
      position: absolute;
      background: white;
      border-radius: 50%;
      opacity: 0.8;
      animation: twinkling 2s infinite ease-in-out;
    }

    @keyframes twinkling {
      0%, 100% {
        opacity: 0.4;
      }
      50% {
        opacity: 1;
      }
    }
    .box {
      width: 35%;
      height:60%;
      padding: 30px;
      border-radius: 15px;
      display:flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background: linear-gradient(45deg, #1a1a2e, #16213e, #0f3460);
      box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
      color: #333;
    }
    h2 {
      text-align: center;
      color: #0059b3;
      margin-bottom: 20px;
    }
    .stats {
      width:100%;
      height:80%;
      display: flex;
      justify-content: space-evenly;
      flex-wrap: wrap;
    }
    .stats div {
      margin: 15px;
      padding: 20px;
      flex: 1 1 30%;
      text-align: center;
      background: #f1faff;
      border: 1px solid #b3d9ff;
      border-radius: 10px;
      transition: transform 0.3s ease, background-color 0.3s ease;
    }
    .stats div:hover {
      transform: translateY(-10px);
      background-color: #e0f7ff;
    }
    h3 {
      font-size: 20px;
      color: #004080;
    }
    p {
      font-size: 18px;
      font-weight: bold;
      color: #333;
    }



    

    /* Header Text Styling */
    h1 {
      font-size: 28px;
      color: #dacbcb;
      margin-bottom: 20px;
      font-weight: bold;
      text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
    }

    /* Navigation Styling */
    nav ul {
      list-style: none;
      padding: 0;
    }

    nav ul li {
      margin: 15px 0;
    }

    nav ul li a {
      text-decoration: none;
      font-size: 18px;
      color: #333;
      padding: 10px 20px;
      background-color: #007bff;
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
      display: inline-block;
    }

    nav ul li a:hover {
      background-color: #0056b3;
      color: white;
    }

    /* Footer Styling */
    footer {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 14px;
      color: white;
    }

</style>


  <div class="stars" id="stars"></div>
  <div class="box">
  <h1>Statistics of items present</h1>
  <div class="stats">
    <div>
      <h3>Total Items</h3>
      <p><%= totalItems %></p>
    </div>
    <div>
      <h3>Used Containers</h3>
      <p><%= usedContainers %></p>
    </div>
    <div>
      <h3>Waste Items</h3>
      <p><%= wasteItems %></p>
    </div>
    <div>
      <h3>Placed Items</h3>
      <p><%= placedItems %></p>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>



<script>
  const starsContainer = document.getElementById('stars');
  const numStars = 100; // Number of stars

  for (let i = 0; i < numStars; i++) {
    const star = document.createElement('div');
    star.classList.add('star');
    star.style.top = Math.random() * 100 + '%'; // Random vertical position
    star.style.left = Math.random() * 100 + '%'; // Random horizontal position
    starsContainer.appendChild(star);
  }
</script>
